{% extends 'base.html.twig' %}

{% block title %}Search By Year{% endblock %}

{% block body %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% if dataSearched.annee == null %}
            <p class="flex col-span-4 justify-center text-base text-4xl font-bold text-blue-600">Champs non renseign√©s ! </p>
            <div class="col-span-4 m-auto ">
                <a href="{{ path('home') }}">
                    <button class="px-3 py-2 text-sm rounded-lg text-gray-300 bg-red-900 hover:bg-red-700">
                        PAGE ACCUEIL
                    </button>
                </a>
            </div>
            {% else %}
                <div class="text-center pb-12 col-span-4">
                    <p class="flex col-span-4 justify-center text-base text-4xl font-bold text-blue-600">Photos de {{ dataSearched.annee  }} </p>
                </div>
                {% for photo in photoList %}
                    {%  if  photo.album.annee == dataSearched.annee %}
                        {% set equi = '' %}
                        {% set equi = photo.file %}
                        <div class="h-80 w-full bg-gradient-to-b from-gray-600 to-gray-400 rounded-lg shadow-lg justify-center p-2 flex flex-col">
                            <div class="h-3/6 mb-4">
                                <a href= "{{ path('detailsPhoto', {idPhoto:photo.id, titleAlbum:photo.album.titre} ) }}" >
                                    <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                                </a>
                            </div>
                            <div class="text-center py-8 sm:py-6 h-2/6 mb-4">
                                <p class="text-base text-gray-800 font-bold underline mt-4">Album</p>
                                <p class="text-base text-gray-800 font-normal">{{ photo.album.titre }}</p>
                            </div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="ml-auto h-1/6">
                                    <a href="{{ path('deletePhotoFromAllPhotos', {idPhoto:photo.id}) }}" onclick="return confirm('Confirmer la suppression de cette photo ?')" class="px-2 py-1 text-xs rounded-full text-gray-200 bg-red-400 hover:bg-red-600">
                                        X
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
            {%  endif %}
        </div>
    </section>

{% endblock %}















