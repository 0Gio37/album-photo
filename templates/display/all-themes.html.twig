{% extends 'base.html.twig' %}

{% block title %}All Themes{% endblock %}

{% block body %}

    {#  {%  include 'component/inputAddPhoto.html.twig' %} #}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">

        <p class="text-sm text-blue-400 italic mb-12"><a class="hover:text-gray-300 transform transition duration-500 underline" href="{{ path('home') }}">PAGE D'ACCUEIL_</a>
            <span class="text-xs"> / Tous les th√®mes</span>
        </p>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-5">
            {% for theme in themeList %}
                {% if  theme.albums | length == 0 %}
                        <div class="w-full bg-gradient-to-b from-gray-600 to-gray-400 rounded-lg shadow-lg overflow-hidden flex justify-center items-center items-stretch cursor-not-allowed">
                            <div class="text-center text-3xl text-gray-800 font-bold py-4">
                              {{ theme.titre | upper }}
                            </div>
                            <div class="text-right text-sm pr-2 pb-2 italic"></div>
                        </div>
                {% elseif theme.albums | length == 1 %}
                    <a href="{{ path('displayOneTheme', {idTheme:theme.id, titreTheme:theme.titre} )  }}" >
                        <div class="w-full bg-gradient-to-b from-gray-600 to-gray-400 text-gray-800 rounded-lg shadow-lg overflow-hidden justify-center items-center items-stretch">
                            <div class="text-center hover:text-white text-3xl font-bold py-4 transform transition duration-500">
                                {{ theme.titre | upper }}
                            </div>
                            <div class="text-right text-sm pr-2 pb-2 italic">{{ theme.albums | length }} album</div>
                        </div>
                    </a>
                {% else %}
                    <a href="{{ path('displayOneTheme', {idTheme:theme.id, titreTheme:theme.titre} )  }}" >
                        <div class="w-full bg-gradient-to-b from-gray-600 to-gray-400 text-gray-800 rounded-lg shadow-lg overflow-hidden justify-center items-center items-stretch">
                            <div class="text-center hover:text-white text-3xl font-bold py-4 transform transition duration-500">
                                {{ theme.titre | upper }}
                            </div>
                            <div class="text-right text-sm pr-2 pb-2 italic">{{ theme.albums | length }} albums</div>
                        </div>
                    </a>
            {% endif %}
            {% endfor %}
        </div>
    </section>

{% endblock %}
