{% extends 'base.html.twig' %}

{% block title %}All Themes{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Toutes les Th√©matiques</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-5">
            {% for theme in themeList %}
                <a href="{{ path('displayOneTheme', {idTheme:theme.id, titreTheme:theme.titre} )  }}" >
                    <div class="hover:bg-blue-600   w-full bg-gray-300 rounded-lg shadow-lg overflow-hidden flex justify-center items-center items-stretch">
                        <div class="text-center hover:text-gray-300 text-3xl text-gray-800 font-bold mb-2 py-8 sm:py-6">
                          {{ theme.titre | upper }}
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>

{% endblock %}
