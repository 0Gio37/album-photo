{% extends 'base.html.twig' %}

{% block title %}All Albums{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Tous les Albums</p>
        </div>
        <div class="flex justify-end mb-3">
            {% if toggleBtn == true %}
                <a href="{{ path('displayAllAlbumChrono')  }}" >
                    <div class="text-red-400 hover:text-gray-300"><i class="fas fa-arrow-circle-up"></i> Du plus ancien <i class="fas fa-arrow-circle-up"></i></div>
                </a>
            {% else %}
                <a href="{{ path('displayAllAlbumAntiChrono')  }}" >
                    <div class="text-red-400 hover:text-gray-300"><i class="fas fa-arrow-circle-down"></i> Du plus r√©cent <i class="fas fa-arrow-circle-down"></i></div>
                </a>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for album in albumList %}
                <div class="w-full h-full bg-gray-300 rounded-lg py-2 px-2 shadow-lg overflow-hidden flex flex-col justify-center items-center">
                    <div class="h-3/5">
                        {% set equi = '' %}
                        {% for photo in photoList %}
                            {%  if photo.album.id == album.id %}
                                {% set equi = photo.file %}
                            {% endif %}
                        {% endfor %}
                        {% if equi == '' %}
                            <img class="cursor-not-allowed object-center object-cover h-5/6 w-full" src='{{ asset('img/unexist.jpg') }}' alt="Pas de photo">
                        {% else %}
                            <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre})  }}" >
                                <img class="object-center object-cover h-5/6 w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                        {% endif %}
                            </a>
                    </div>
                    <div class="text-center py-8 sm:py-6 h-2/5">
                      <p class="text-3xl text-gray-800 font-bold mb-2">{{ album.titre|replace({'/[^A-Z+]/': ''}) }}</p>
                        <p class="text-xl text-gray-800 mb-2">
                            <a href="{{ path('displaySingleYear', {albumAnnee:album.annee} ) }}">
                                <span class="underline hover:text-blue-600">
                                    {{ album.annee }}
                                </span>
                            </a>
                        <p class="text-xl font-bold text-gray-800 mb-2">
                            <a href="{{ path('displayOneTheme', {idTheme:album.theme.id, titreTheme:album.theme.titre} )  }}" >
                                <span class=" hover:text-blue-600 font-bold">
                                   {{ album.theme.titre|upper }}  <i class="far fa-arrow-alt-circle-right"></i>
                                </span>
                            </a>
                        </p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="ml-auto mb-2">
                            <a href="{{ path('deleteAlbum', {idAlbum:album.id}) }}" onclick="return confirm('Confirmer la suppression de cette photo ?')" class="px-2 py-1 text-xs rounded-full text-gray-200 bg-red-400 hover:bg-red-600">
                                X
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
