{% extends 'base.html.twig' %}

{% block title %}All Albums{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    {% for message in app.flashes('supp') %}
        <div class="bg-red-500 text-white text-center italic text-sm w-1/3 rounded-full py-1 my-4 mt-6 mx-auto">
            {{ message }}
        </div>
    {% endfor %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-6">
        <div class="pb-6">
            <p class="text-blue-600 underline italic">/ Tous les albums</p>
        </div>

        <div class="flex justify-end mb-3 hover:text-red-400 text-gray-200 transform transition duration-500">
            {% if toggleBtn == true %}
                <a href="{{ path('displayAllAlbumAlpha')  }}" >
                    <div><i class="fas fa-arrow-circle-up"></i> Voir par ordre alphabétique <i class="fas fa-arrow-circle-up"></i></div>
                </a>
            {% else %}
                <a href="{{ path('displayAllAlbumNonAlpha')  }}" >
                    <div><i class="fas fa-arrow-circle-down"></i> Voir par order non alphabétique <i class="fas fa-arrow-circle-down"></i></div>
                </a>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for album in albumList %}
                <div class="h-80 w-full bg-gradient-to-b from-gray-600 to-gray-400 rounded-lg shadow-lg justify-center p-2 flex flex-col">
                    <div class="text-center mb-2 text-white">
                        <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre})  }}" >
                            <p class="text-base hover:text-blue-500 transform transition duration-500">{{ album.titre|upper }}</p>
                        </a>
                    </div>
                    <div class="h-3/6 mb-4">
                        {% set equi = '' %}
                        {% for photo in photoList %}
                            {%  if photo.album.id == album.id %}
                                {% set equi = photo.file %}
                            {% endif %}
                        {% endfor %}
                        {% if equi == '' %}
                            <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ asset('img/unexist.jpg') }}' alt="Pas de photo">
                        {% else %}
                            <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre})  }}" >
                                {% if uploadImagesDestination is same as('local') %}
                                    <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                                {% else %}
                                    <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ urlCloudinary~equi }}' alt="Photo de couverture">
                                {% endif %}
                            {% endif %}
                            </a>
                    </div>

                    <div class="text-center mb-1">
                        {% if album.annee == null %}
                            <p class="text-base italic text-gray-800 hover:font-bold">Sans date</p>
                        {% else %}
                            <p class="text-base text-gray-800 hover:font-bold">{{ album.annee }}</p>
                        {% endif %}
                    </div>

                    <div class="border-b-2 border-gray-500 w-full"></div>

                    <div class="text-center">
                        <p class="text-base text-left text-gray-800 font-bold">Theme</p>
                        <a href="{{ path('displayOneTheme', {idTheme:album.theme.id, titreTheme:album.theme.titre} )  }}" >
                            <p class="text-base text-gray-800 hover:font-bold hover:text-blue-700 transform transition duration-500">{{ album.theme.titre|upper}}</p>
                        </a>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="ml-auto h-1/6">
                            <a href="{{ path('deleteAlbum', {idAlbum:album.id}) }}" onclick="return confirm('Confirmer la suppression de cet album ?')" title="supprimer la photo" class="px-2 py-1 text-xs border border-solid border-blue-500 hover:border-red-700 rounded-full text-red-700 bg-transparent hover:bg-red-700 hover:scale-105 hover:text-white transform transition duration-500">
                                X
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
