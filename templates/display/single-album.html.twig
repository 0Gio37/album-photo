{% extends 'base.html.twig' %}

{% block title %}Single Album{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            {% if listPhotoAlbum %}
            <p class="text-base text-2xl font-bold text-blue-600">Toutes les photos de l'album : {{ titleAlbum | upper}} {{ listPhotoAlbum[0].album.annee }}</p>
            {% else %}
            <p class="text-base text-2xl font-bold text-blue-600">Album Vide</p>
            {% endif %}
        </div>


        <div class="flex justify-end">
            {% if toggleBtn == true %}
                <a href="{{ path('displayOneAlbumChrono', {idAlbum:idAlbum, titleAlbum:titleAlbum} )  }}" >
                    <div class="text-blue-400 hover:text-gray-300"><i class="fas fa-arrow-circle-up"></i> Plus ancien au plus recent <i class="fas fa-arrow-circle-up"></i></div>
                </a>
            {% else %}
                <a href="{{ path('displayOneAlbumAntiChrono', {idAlbum:idAlbum, titleAlbum:titleAlbum} )  }}" >
                    <div class="text-blue-400 hover:text-gray-300"><i class="fas fa-arrow-circle-down"></i> Plus récent au plus ancien <i class="fas fa-arrow-circle-down"></i></div>
                </a>
            {% endif %}
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for photo in listPhotoAlbum %}
                {% set equi = '' %}
                {% set equi = photo.file %}
                <div class="w-full h-full bg-gray-300 rounded-lg py-2 px-2 shadow-lg overflow-hidden flex flex-col justify-center items-center">
                    <div class="h-3/5">
                        <a href= "{{ path('detailsPhoto', {idPhoto:photo.id, titleAlbum:titleAlbum} ) }}" >
                            <img class="object-center object-cover h-5/6 w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                        </a>
                    </div>
                    <div class="text-center py-8 sm:py-6 h-2/5">
                        <p class="text-base text-gray-800 font-normal">Posté le {{ photo.createAt | format_date(locale='fr', pattern=" dd MMMM YYYY")  }}</p>
                        <p class="text-base text-gray-800 font-normal">Par : {{ photo.auteur.username }}</p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="ml-auto mb-2">
                            <a href="{{ path('deletePhotoFromAlbum', {titleAlbum:titleAlbum, idAlbum:idAlbum, idPhoto:photo.id}) }}" onclick="return confirm('Confirmer la suppression de cette photo ?')" class="px-2 py-1 text-xs rounded-full text-gray-200 bg-red-400 hover:bg-red-600">
                                X
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
