{% extends 'base.html.twig' %}

{% block title %}All Photos{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Toutes les photos</p>
        </div>
        <div class="flex justify-end mb-3">
            {% if toggleBtn == true %}
                <a href="{{ path('displayAllPhotoChrono')  }}" >
                    <div class="text-red-400 hover:text-gray-300"><i class="fas fa-arrow-circle-up"></i> De la plus ancienne  <i class="fas fa-arrow-circle-up"></i></div>
                </a>
            {% else %}
                <a href="{{ path('displayAllPhotoAntiChrono')  }}" >
                    <div class="text-red-400 hover:text-gray-300"><i class="fas fa-arrow-circle-down"></i> De la plus r√©cente <i class="fas fa-arrow-circle-down"></i></div>
                </a>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for photo in photoAllList %}
                {% set equi = '' %}
                {% set equi = photo.file %}
                <div class="w-full h-full bg-gray-400 rounded-lg py-2 px-2 shadow-lg overflow-hidden flex flex-col justify-center items-center">
                    <div class="h-3/5">
                        <a href= "{{ path('detailsPhoto', {idPhoto:photo.id, titleAlbum:photo.album.titre} ) }}" >
                            <img class="border border-1 border-blue-700 shadow-lg object-center object-cover h-5/6 w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                        </a>
                    </div>
                    <div class="text-center py-8 sm:py-6 h-2/5">
                        <p class="text-base text-gray-800 font-normal">{{ photo.album.titre }}</p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="ml-auto mb-2">
                            <a href="{{ path('deletePhotoFromAllPhotos', {idPhoto:photo.id}) }}" onclick="return confirm('Confirmer la suppression de cette photo ?')" class="px-2 py-1 text-xs rounded-full text-gray-200 bg-red-400 hover:bg-red-600">
                                X
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
