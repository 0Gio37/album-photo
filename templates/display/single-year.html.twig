{% extends 'base.html.twig' %}

{% block title %}Single Album{% endblock %}

{% block body %}

    <section class="bg-gray-800 pt-6">
        <div class="rounded-lg bg-gradient-to-b from-gray-700 to-gray-500 p-8 mx-60 shadow-lg">
            <a href="{{ path('add_photo') }}">
                <div class="rounded-full py-4 bg-blue-900 hover:bg-blue-700 text-gray-400 px-8">
                    Ajouter des photos ...
                </div>
            </a>
        </div>

    </section>


    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Tous les albums de l'année {{ albumAnnee  }}</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for album in albumListByYear %}
                <div class="w-full h-full bg-gray-300 rounded-lg py-2 px-2 shadow-lg overflow-hidden flex flex-col justify-center items-center">
                    <div class="h-3/5">
                        <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre} )  }}" >
                            {% set equi = '' %}
                            {% for photo in photoList %}
                                {%  if photo.album.id == album.id %}
                                    {% set equi = photo.file %}
                                {% endif %}
                            {% endfor %}
                            {% if equi == '' %}
                                <img class="object-center object-cover h-5/6 w-full" src='{{ asset('img/unexist.jpg') }}' alt="Pas de photo">
                            {% else %}
                                <img class="object-center object-cover h-5/6 w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                            {% endif %}
                        </a>
                    </div>
                    <div class="text-center py-8 sm:py-6 h-2/5">
                        <p class="text-3xl text-gray-800 font-bold mb-2">{{ album.titre | upper }}</p>
                        <p class="text-xl text-gray-800 mb-2">Année : {{ album.annee }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
