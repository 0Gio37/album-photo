{% extends 'base.html.twig' %}

{% block title %}Single Album{% endblock %}

{% block body %}

    {%  include 'component/inputAddPhoto.html.twig' %}

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Tous les albums de la Th√©matique : {{ titreTheme | upper }}</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for album in listAlbumsByTheme %}
                <div class="h-80 w-full bg-gradient-to-b from-gray-600 to-gray-400 rounded-lg shadow-lg justify-center p-2 flex flex-col">
                    <div class="h-3/6 mb-6">
                        <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre} )  }}" >
                            {% set equi = '' %}
                            {% for photo in photoList %}
                                {%  if photo.album.id == album.id %}
                                    {% set equi = photo.file %}
                                {% endif %}
                            {% endfor %}
                            {% if equi == '' %}
                                <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ asset('img/unexist.jpg') }}' alt="Pas de photo">
                            {% else %}
                                <img class="border border-1 border-blue-700 shadow-lg rounded-lg object-center object-cover h-full w-full" src='{{ asset('uploads/'~equi) }}' alt="Photo de couverture">
                            {% endif %}
                        </a>
                    </div>
                    <div class="text-center text-2xl mb-6">
                        <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:album.id, titleAlbum:album.titre})  }}" >
                            <p class="text-gray-800 font-bold hover:text-blue-600 hover:underline">{{ album.titre | upper }}</p>
                        </a>
                        {% if album.annee == null %}
                            <p class="text-gray-800 hover:font-bold"> - </p>
                        {% else %}
                            <p class="text-gray-800 hover:font-bold">{{ album.annee }}</p>
                        {% endif %}
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="ml-auto h-2/6">
                            <a href="{{ path('deleteAlbum', {idAlbum:album.id}) }}" onclick="return confirm('Confirmer la suppression de cette photo ?')" class="px-2 py-1 text-xs rounded-full text-gray-200 bg-red-400 hover:bg-red-600">
                                X
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
