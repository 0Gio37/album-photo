{% extends 'base.html.twig' %}

{% block title %}Détails Photo{% endblock %}

{% block body %}

    <div class="flex justify-center mb-2 col-start-6 fixed top-10 right-16">
        <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:currentAlbumId, titleAlbum:titleAlbum})  }}" >
            <button class="px-5 py-2 text-md rounded-full text-gray-300 bg-red-900 hover:bg-red-700">
                X
            </button>
        </a>
    </div>

    <section class="grid grid-cols-12 -mt-12">
        <div class="h-full flex flex-col col-start-1 col-span-8 gap-4 justify-between p-4 m-4 bg-black border border-1 border-gray-600 shadow-lg rounded-lg">
       {#  <div class="h-full col-start-1 col-span-4 p-4 m-4 bg-black rounded-lg shadow-lg overflow-hidden flex flex-col items-center"> #}
            <div class="flex items-center">
                <a href= "{{ path('detailsPhoto', {idPhoto:idPhoto, titleAlbum:titleAlbum, status:0, count : count-1} ) }}" >
                    <div class="px-3 py-10 text-xl rounded-full text-gray-300 bg-blue-900 hover:bg-blue-700 shadow-md">
                        <i class="fas fa-chevron-left"></i>
                    </div>
                </a>
                <div class="m-auto w-2/5">
                    {% set equi = '' %}
                    {% set equi = selectedPhoto.file %}
                    <img class="object-center object-cover border border-1 border-blue-700 shadow-lg rounded-lg m-auto w-4/5" src='{{ asset('uploads/'~equi) }}' alt="photo gros plan">
                </div>
                <a href= "{{ path('detailsPhoto', {idPhoto:idPhoto, titleAlbum:titleAlbum, status:0, count : count+1} ) }}" >
                    <div class="px-3 py-10 text-xl rounded-full text-gray-300 bg-blue-900 hover:bg-blue-700 shadow-md">
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </a>
            </div>

            <div class="text-center pt-2 pb-6">
                <p class="text-base text-gray-600 font-normal">
                    - Posté le {{ selectedPhoto.createAt | format_date(locale='fr', pattern=" dd MMMM YYYY")  }}, par {{ selectedPhoto.auteur.username }} -
                </p>
                <p class="text-base text-gray-600 font-normal">
                    - Album : {{ selectedPhoto.album.titre }} | Thématique : {{ selectedPhoto.album.theme.titre }} -
                </p>
            </div>
        </div>


        <div class="text-base text-gray-600 font-normal h-full flex flex-col col-start-9 col-span-3 justify-between p-4 m-4 border border-1 border-gray-600 shadow-lg rounded-lg">
            <div class="bg-black border border-1 border-gray-600 shadow-lg rounded-lg">
                <div>
                    {% if lienTagPhotoList %}
                        <p class="text-base text-left font-bold">Identifié(s) :</p>
                        {% for lien in lienTagPhotoList %}
                            {% if lien.photo.id == selectedPhoto.id %}
                                {% for tag in tagList %}
                                    {% if  lien.tag.id == tag.id %}
                                        <p class="text-left pl-32">- {{ lien.tag.prenom }}  {{ lien.tag.nom }}  </p>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <p class="text-xl italic text-center font-bold"> "Personne identifié ..."</p>
                    {% endif %}
                </div>
                <div>
                    <a href="{{ path('add_new_tag', {titleAlbum: titleAlbum, photoId:selectedPhoto.id,status:1, count:0 }) }}">
                        <i class="fas fa-plus-circle text-2xl text-green-900 hover:text-green-700"></i>
                    </a>
                </div>

            </div>

            <div class="bg-black border border-1 border-gray-600 shadow-lg rounded-lg">
                <div>
                    {% if lienCommentPhotoList %}
                        <p class="text-base text-left font-bold">Commentaire(s) :</p>
                        {% for lien in lienCommentPhotoList %}
                            {% if lien.photo.id == selectedPhoto.id %}
                                {% for comm in commentList %}
                                    {% if  lien.comment.id == comm.id %}
                                        <div class="flex inline">
                                            <div class="text-left pl-32">{{ lien.comment.texte }} </div>
                                            <div class="text-left pl-32 text-xs italic">De  : {{ lien.comment.auteur.username }} </div>
                                            <div class="text-left pl-32 text-xs italic">Le :{{ lien.comment.createAt | format_date(locale='fr', pattern=" dd MMMM YYYY")  }}</div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <p class="text-xl italic text-center font-bold"> "Aucun commentaire ..."</p>
                    {% endif %}
                </div>
                <div>
                    <a href="{{ path('add_new_comment', {titleAlbum: titleAlbum, photoId:selectedPhoto.id,status:1, count:0 }) }}">
                        <i class="fas fa-plus-circle text-2xl text-green-900 hover:text-green-700"></i>
                    </a>
                </div>

            </div>



        </div>
    </section>

{% endblock %}
