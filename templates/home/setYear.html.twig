{% extends 'base.html.twig' %}

{% block title %}Modifier l'année{% endblock %}

{% block body %}

    <div class="pt-6">
        <div class="rounded-lg bg-gradient-to-b from-gray-700 to-gray-500 p-8 mx-60 shadow-lg h-screen">
            <div class="flex justify-center mb-2 col-start-6 fixed top-18 right-24">
                <a href= "{{ path('detailsPhoto', {titleAlbum:titleAlbum, idPhoto:photoId, status:status, count:count} ) }}" >
                    <button class="px-5 py-2 text-md rounded-full text-gray-300 bg-red-900 hover:bg-red-700">
                        X
                    </button>
                </a>
            </div>
            </section>
            <section class="rounded-full py-4 bg-green-900 font-bold text-center text-gray-400 px-8">
                Renseignez l'année
            </section>

            <section class="formTag">
                {{ form_start(setYearForm) }}
                <p class="text-gray-100 text-xl font-bold text-center mt-4 mb-2">Annnée</p>
                {{ form_row(setYearForm.annee) }}
                <button id="displayTagListBtn" class="flex mt-6 m-auto px-3 py-2 text-sm rounded-lg text-gray-300 bg-blue-900 hover:bg-blue-700">
                    Ajouter
                </button>
                {{ form_end(setYearForm) }}
                {% if currentYear %}
                    {% include 'modal/displayYear.html.twig' with {'currentYear':currentYear} only %}
                {% endif %}
            </section>
        </div>
    </div>

{% endblock %}
