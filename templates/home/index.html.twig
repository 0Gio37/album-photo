{% extends 'base.html.twig' %}

{% block title %}Page d'Accueil{% endblock %}

{% block body %}

    <section class="bg-gray-800 pt-6" xmlns="http://www.w3.org/1999/html">
        <div class="rounded-lg bg-gradient-to-b from-gray-700 to-gray-500 p-8 mx-60 shadow-lg">
            <a href="{{ path('add_photo') }}">
                <div class="rounded-full py-4 bg-blue-900 hover:bg-blue-700 text-gray-400 px-8">
                  Ajouter des photos ...
                </div>
            </a>
        </div>
    </section>

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <p class="text-base text-2xl font-bold text-blue-600">Les Dernières Publications</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for photo in photoList %}
                <div class="w-full bg-gray-300 rounded-lg py-6 px-2 shadow-lg flex flex-col justify-center items-center">
                    <div class="h-3/5">
                        {% set equi = '' %}
                        {% set equi = photo.file %}
                          <a href= "{{ path('detailsPhoto', {idPhoto:photo.id, titleAlbum:photo.album.titre} ) }}" >
                            <img class="object-center object-cover h-5/6 w-full" src='{{ asset('uploads/'~equi) }}' alt="photo">
                        </a>
                    </div>
                    <div class="text-center h-2/5">
                        <p class="text-base text-gray-800 font-normal">Posté le {{ photo.createAt | format_date(locale='fr', pattern=" dd MMMM YYYY")  }}</p>
                        <p class="text-base text-gray-800 font-normal">par {{ photo.auteur.username }}</p>
                        <p class="text-base text-gray-800 font-normal">
                            <a href= "{{ path('displayOneAlbumAntiChrono', {idAlbum:photo.album.id, titleAlbum:photo.album.titre} )  }}" >
                                Album :<span class="underline hover:text-blue-600 font-bold"> {{ photo.album.titre }}</span> -
                            </a>
                            {{ photo.album.annee }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
